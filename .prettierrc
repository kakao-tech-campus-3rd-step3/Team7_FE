{
    "tabWidth": 4,
    "printWidth": 100,

    "plugins": [
        "prettier-plugin-tailwindcss",
        "@trivago/prettier-plugin-sort-imports"
    ],

    "importOrder": [
        "^react",
        "<THIRD_PARTY_MODULES>",

        "^(@/app)(.*)$",
        "^(@/entities)(.*)$",
        "^(@/features)(.*)$",
        "^(@/pages)(.*)$",
        "^(@/shared)(.*)$",
        "^(@/widgets)(.*)$",

        "^(.*)/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": false
}
